@model Project.Models.AddApointment
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<head>
    <title>Add Appointment</title>
</head>
<style>
    a:link, a:visited {
        background-color: indianred;
        color: white;
        padding: 5px 10px;
        display: inline-block;
    }

    a:hover, a:active {
        background-color: green;
    }
</style>
@using (Html.BeginForm("Adapo", "Home", FormMethod.Post))
{
    <center>
        <hr />
        <div class="header">
            <div class="navbar">
                <img src="~/NewFolder/WhatsApp Image 2022-05-09 at 11.57.39 AM.jpeg" height="50" width="50" />
                <a href="Homepage">HOME</a>
                <a href="AddDoctor">ADD DOCTOR</a>
                <a href="AddPatient">ADD PATIENT</a>
                <a href="CancelApointment">CANCEL APPOINTMENT</a>
            </div>
        </div>
        <hr />
        <div style="background-color:rosybrown;width:100%;height:100%;">
            <h1><b>ADD Appointment</b></h1><hr />
            <table cellspacing="30" cellpadding="5">
                <tr>
                    <th>
                        <b>PatientID:</b><br />
                        @Html.TextBoxFor(m => m.PatientID, new { style = "width:200px" })
                        <span asp-validation-for="PatientID" class="text-danger"></span>
                    </th>
                </tr>
                <tr>
                    <th>
                        <b>Specialization:</b><br />
                        <select name="Sepcialization"style="width:200px">
                            <option value="Select">Select</option>
                            <option value="General">General</option>
                            <option value="Internal Medicine">Internal Medicine</option>
                            <option value="Pediatrics">Pediatrics</option>
                            <option value="Orthopedics">Orthopedics</option>
                            <option value="Ophthalmology">Ophthalmology</option>
                        </select>
                        <span asp-validation-for="Sepcialization" class="text-danger"></span>

                    </th>
                </tr>
                <tr>
                    <th>
                        <b>Doctor:</b><br />
                        @Html.TextBoxFor(m => m.Doctor, new { style = "width:200px" })
                        <span asp-validation-for="Doctor" class="text-danger"></span>
                    </th>

                </tr>
                <tr>
                    <th>
                        <b>VisitDate:</b><br />
                        <input asp-for="VisitDate" type="date" class="form-control" size="200" height="30" />
                        <span asp-validation-for="VisitDate" class="text-danger" ></span>
                    </th>

                </tr>
                <tr>
                    <th>
                        <b>VisitingHours:</b><br />
                        <select name="AppointmentTime"style="width:200px">
                            <option value="Select">Select</option>
                            <option value="9:00AM-10:00AM">9:00AM-10:00AM</option>
                            <option value="10:00AM-11:00AM">10:00AM-11:00AM</option>
                            <option value="11:00AM-12:00PM">11:00AM-12:00PM</option>
                            <option value="12:00PM-01:00PM">12:00AM-01:00PM</option>
                        </select>
                        <span asp-validation-for="AppointmentTime" class="text-danger"></span>
                    </th>
                </tr>


            </table>
            <input type="submit" value="submit" class="btn btn-dark" /> <div><a asp-action="Index">Logout</a></div>
        </div>
    </center>
}
